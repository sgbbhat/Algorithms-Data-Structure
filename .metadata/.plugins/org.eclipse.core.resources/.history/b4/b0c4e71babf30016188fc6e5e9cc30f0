#include "Queue.h"

using namespace std;

Queue::Queue() {
	front = -1;
	rear = -1;
	for(int i= 0; i < QUEUE_SIZE ; i++)
	{
		queue[i] = 0;
	}
}

Queue::~Queue() {
	// TODO Auto-generated destructor stub
}

/*
 * Function to determine if the queue is empty
 */
bool Queue::IsEmpty()
{
	if(front == -1 && rear == -1)
		return true;
	else
		return false;
}

/*
 * Function  to add elements to the arrary
 */
void Queue::Enqueue(int value)
{
	if(IsFull())
	{
		cout<<"Queue is full "<<endl;
		break;
	}
	else if(IsEmpty())
	{
		front = rear = 0;
	}
	else
	{
		rear++;
	}
	queue[rear] = value;
	cout<<"Value "<< value<<" added successfully to the queue"<<endl;
}

/*
 * Function to check if the array if full
 */
bool Queue::IsFull()
{
	int sizeOfArrary = sizeof(queue)/ sizeof(queue[0]);
	if(rear == sizeOfArrary - 1)
	{
		return true;
	}
	else
		return false;
}

