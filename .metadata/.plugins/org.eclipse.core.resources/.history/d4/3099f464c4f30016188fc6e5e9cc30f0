#include <iostream>
#include "Queue.h"

using namespace std;

Queue::Queue() {
	head = NULL;
	temp = NULL;
}

Queue::~Queue() {
}

bool Queue::IsEmpty()
{
	if(head == NULL)
		return true;
	else
		return false;
}

void Queue::Enqueue(int value)
{
	node * temp = (node *) malloc(sizeof(node*)) ;
	node * n = new node;
	n->value = value;
	n->next = NULL;
	if(head == NULL)
	{
		head = n;
		temp = head;
	}
	else
	{
		temp = head;
		while(temp->next != NULL)
		{
			temp = temp->next;
		}
		n = temp;
	}
}

void Queue::PrintQueue()
{
	temp = head;
	while(temp != NULL)
	{
		cout<<temp->value<<endl;
		temp = temp->next;
	}
}
