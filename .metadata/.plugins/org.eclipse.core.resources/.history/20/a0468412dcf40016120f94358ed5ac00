#include <iostream>
#include <bits/stdc++.h>

using namespace std;

// A Huffman tree node
struct MinHeapNode
{
    char data;                // One of the input characters
    unsigned freq;             // Frequency of the character
    MinHeapNode *left, *right; // Left and right child

    MinHeapNode(char data, unsigned freq)
    {
        left = right = NULL;
        this->data = data;
        this->freq = freq;
    }
};

int main() {
	cout << "Huffman coding algorithm" << endl;
	int menu = 1;

	while(menu == 1)
	{

	}
	return 0;
}
